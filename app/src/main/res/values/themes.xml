<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HabbitTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.HabbitTracker" parent="Base.Theme.HabbitTracker" />

    <style name="Theme.HabbitTracker.Teal" parent="Base.Theme.HabbitTracker">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
    </style>

    <style name="Theme.HabbitTracker.Red" parent="Base.Theme.HabbitTracker">
        <item name="colorPrimary">@color/priority_high</item>
        <item name="colorPrimaryVariant">@color/priority_high</item>
    </style>

    <style name="Theme.HabbitTracker.Orange" parent="Base.Theme.HabbitTracker">
        <item name="colorPrimary">@color/priority_medium</item>
        <item name="colorPrimaryVariant">@color/priority_medium</item>
    </style>

    <style name="Theme.HabbitTracker.Green" parent="Base.Theme.HabbitTracker">
        <item name="colorPrimary">@color/priority_low</item>
        <item name="colorPrimaryVariant">@color/priority_low</item>
    </style>

    <style name="CalendarTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    
    <style name="Theme.HabbitTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <!-- Typography Styles -->
    <style name="TextAppearance.HabbitTracker.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.HabbitTracker.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.HabbitTracker.Headline3" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.HabbitTracker.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.HabbitTracker.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
    </style>
</resources>